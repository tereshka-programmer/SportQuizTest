<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.gameScreen.GameFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="How long is a marathon?"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toTopOf="@id/btSubmit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btFirstAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@string/easy"
            android:backgroundTint="@color/gray"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btSecondAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@string/easy"
            android:backgroundTint="@color/gray"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btThirdAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@string/easy"
            android:backgroundTint="@color/gray"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btFourAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@string/easy"
            android:backgroundTint="@color/gray"
            />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submit"
        android:backgroundTint="@color/green"
        android:layout_marginBottom="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>